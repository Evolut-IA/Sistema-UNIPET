{
  "name": "sistema-unipet",
  "description": "Sistema de gerenciamento para pets",
  "type": "service",
  "buildpack": "heroku/builder:24",
  "buildpacks": [
    "heroku/nodejs"
  ],
  "environment": {
    "NODE_ENV": "production"
  },
  "ports": [
    {
      "port": 80,
      "protocol": "http"
    }
  ],
  "healthCheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3,
    "startPeriod": 60
  },
  "volumes": [],
  "networks": [],
  "restart": "unless-stopped"
}
